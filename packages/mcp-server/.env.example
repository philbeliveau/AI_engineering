# Knowledge MCP Server Configuration
# Copy this file to .env and update values as needed

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
# Deployment environment: local | staging | production
# Production environment requires cloud database URLs (not localhost)
ENVIRONMENT=local

# ==============================================================================
# MONGODB CONFIGURATION
# ==============================================================================
# Local development:
#   MONGODB_URI=mongodb://localhost:27017
#
# MongoDB Atlas (cloud):
#   MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
#
# Example Atlas connection:
#   MONGODB_URI=mongodb+srv://knowledge_user:secretpassword@knowledge-cluster.abc123.mongodb.net/knowledge_db?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=knowledge_db

# ==============================================================================
# QDRANT CONFIGURATION
# ==============================================================================
# Local development:
#   QDRANT_URL=http://localhost:6333
#   QDRANT_API_KEY=  (leave empty for local)
#
# Qdrant Cloud:
#   QDRANT_URL=https://<cluster-id>.cloud.qdrant.io:6333
#   QDRANT_API_KEY=<your-qdrant-cloud-api-key>
#
# Example Qdrant Cloud connection:
#   QDRANT_URL=https://abc123.us-east1-0.cloud.qdrant.io:6333
#   QDRANT_API_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# ==============================================================================
# CONNECTION SETTINGS
# ==============================================================================
# Enable SSL/TLS for database connections (default: true)
# Should always be true for production/cloud databases
SSL_ENABLED=true

# Connection timeout in milliseconds (default: 5000)
CONNECTION_TIMEOUT_MS=5000

# MongoDB connection pool size (default: 10)
MAX_POOL_SIZE=10

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# ==============================================================================
# PROJECT CONFIGURATION
# ==============================================================================
# Project namespacing (used for multi-project isolation)
# Collections are named: {project_id}_sources, {project_id}_chunks, etc.
PROJECT_ID=default

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# Path to JSON file containing API keys
# See docs for file format: {"keys": [{"key": "kp_...", "tier": "REGISTERED", ...}]}
# API_KEYS_FILE=./api_keys.json
