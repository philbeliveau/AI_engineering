# Knowledge MCP Server Configuration
# Copy this file to .env and update values as needed

# Environment: local, development, production
ENVIRONMENT=local

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=knowledge_db

# Qdrant Configuration
QDRANT_URL=http://localhost:6333

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Project namespacing (used for multi-project isolation)
PROJECT_ID=default

# Authentication - Path to JSON file containing API keys
# See docs for file format: {"keys": [{"key": "kp_...", "tier": "REGISTERED", ...}]}
# API_KEYS_FILE=./api_keys.json
