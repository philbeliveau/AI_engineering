# Knowledge MCP Server - Local Development Configuration
# Copy this file to .env for local development with Docker Compose

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
ENVIRONMENT=local

# ==============================================================================
# LOCAL DOCKER COMPOSE DATABASES
# ==============================================================================
# These match the docker-compose.yml configuration in the project root
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=knowledge_db

QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY not needed for local

# ==============================================================================
# CONNECTION SETTINGS
# ==============================================================================
# SSL disabled for local development (Docker containers use unencrypted connections)
SSL_ENABLED=false

CONNECTION_TIMEOUT_MS=5000
MAX_POOL_SIZE=10

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
LOG_LEVEL=DEBUG

# ==============================================================================
# PROJECT CONFIGURATION
# ==============================================================================
PROJECT_ID=default

# ==============================================================================
# AUTHENTICATION (OPTIONAL FOR LOCAL DEV)
# ==============================================================================
# Uncomment to test authentication locally
# API_KEYS_FILE=./api_keys.json
